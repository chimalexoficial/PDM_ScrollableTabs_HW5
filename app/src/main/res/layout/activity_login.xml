<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ActivityMain"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <EditText
        android:id="@+id/activity_main_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="195dp"
        android:hint="Introduce tu usuario"
        android:inputType="text"/>

    <EditText
        android:id="@+id/activity_main_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_main_user"
        android:hint="Introduce tu contrasena"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/activity_main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_alignParentBottom="true" />






</RelativeLayout>